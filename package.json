{
    "name": "@mirei/mona-ui",
    "version": "4.0.1",
    "description": "A very light Angular UI framework",
    "main": "dist/mona-ui/fesm2022/mona-ui.mjs",
    "exports": {
        ".": "./dist/mona-ui/fesm2022/mona-ui.mjs"
    },
    "typings": "dist/mona-ui/index.d.ts",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "npm run build:prod",
        "build:dev": "ng build mona-ui --configuration development",
        "build:prod": "ng build mona-ui --configuration production",
        "build:watch": "ng build mona-ui --watch --configuration development",
        "watch": "ng build mona-ui --watch --configuration development",
        "test:lib": "ng test mona-ui --code-coverage --watch=false",
        "test:lib:watch": "ng test mona-ui --code-coverage --watch",
        "test:app": "ng test mona-ui-tester"
    },
    "author": "Lumine",
    "files": [
        "dist",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/hoshixlily/mona-ui"
    },
    "publishConfig": {
        "access": "public"
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            "@semantic-release/git",
            "@semantic-release/github"
        ],
        "branches": [
            "main"
        ]
    },
    "dependencies": {
        "@angular/animations": "^17.0.2",
        "@angular/cdk": "^17.0.0",
        "@angular/common": "^17.0.2",
        "@angular/compiler": "^17.0.2",
        "@angular/core": "^17.0.2",
        "@angular/forms": "^17.0.2",
        "@angular/platform-browser": "^17.0.2",
        "@angular/platform-browser-dynamic": "^17.0.2",
        "@angular/router": "^17.0.2",
        "@fortawesome/angular-fontawesome": "^0.14.0",
        "@fortawesome/fontawesome-svg-core": "^6.4.2",
        "@fortawesome/free-solid-svg-icons": "^6.4.2",
        "@mirei/ts-collections": "^12.1.2",
        "luxon": "^3.4.3",
        "rxjs": "~7.8.1",
        "tslib": "^2.6.2",
        "uuid": "^9.0.1",
        "zone.js": "~0.14.2"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^17.0.0",
        "@angular-eslint/builder": "^17.0.1",
        "@angular-eslint/eslint-plugin": "^17.0.1",
        "@angular-eslint/eslint-plugin-template": "^17.0.1",
        "@angular-eslint/schematics": "^17.0.1",
        "@angular-eslint/template-parser": "^17.0.1",
        "@angular/cli": "~17.0.0",
        "@angular/compiler-cli": "^17.0.2",
        "@fortawesome/fontawesome-free": "^6.4.2",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/jasmine": "~5.1.2",
        "@types/luxon": "^3.3.4",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "eslint": "^8.53.0",
        "jasmine-core": "~5.1.1",
        "karma": "~6.4.2",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.1",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "ng-packagr": "^17.0.0",
        "prettier": "^3.0.3",
        "typescript": "^5.2.2"
    }
}
