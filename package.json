{
    "name": "@mirei/mona-ui",
    "version": "6.0.0",
    "description": "A very light Angular UI framework",
    "main": "dist/mona-ui/fesm2022/mona-ui.mjs",
    "exports": {
        ".": "./dist/mona-ui/fesm2022/mona-ui.mjs"
    },
    "typings": "dist/mona-ui/index.d.ts",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "npm run build:prod",
        "build:dev": "ng build mona-ui --configuration development",
        "build:prod": "ng build mona-ui --configuration production",
        "build:watch": "ng build mona-ui --watch --configuration development",
        "watch": "ng build mona-ui --watch --configuration development",
        "test:lib": "ng test mona-ui --code-coverage --watch=false",
        "test:lib:watch": "ng test mona-ui --code-coverage --watch",
        "test:app": "ng test mona-ui-tester"
    },
    "author": "Nanahoshi",
    "files": [
        "dist",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/hoshixlily/mona-ui"
    },
    "publishConfig": {
        "access": "public"
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            "@semantic-release/git",
            "@semantic-release/github"
        ],
        "branches": [
            "main"
        ]
    },
    "dependencies": {
        "@angular/animations": "^18.0.0",
        "@angular/cdk": "^18.0.0",
        "@angular/common": "^18.0.0",
        "@angular/compiler": "^18.0.0",
        "@angular/core": "^18.0.0",
        "@angular/forms": "^18.0.0",
        "@angular/platform-browser": "^18.0.0",
        "@angular/platform-browser-dynamic": "^18.0.0",
        "@angular/router": "^18.0.0",
        "@fortawesome/angular-fontawesome": "^0.15.0",
        "@fortawesome/fontawesome-svg-core": "^6.5.2",
        "@fortawesome/free-solid-svg-icons": "^6.5.2",
        "@mirei/ts-collections": "^14.0.2",
        "@tiptap/core": "^2.4.0",
        "@tiptap/extension-underline": "^2.4.0",
        "@tiptap/pm": "^2.4.0",
        "@tiptap/starter-kit": "^2.4.0",
        "luxon": "^3.4.4",
        "rxjs": "~7.8.1",
        "tslib": "^2.6.2",
        "uuid": "^9.0.1",
        "zone.js": "~0.14.6"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^18.0.1",
        "@angular-eslint/builder": "^17.5.1",
        "@angular-eslint/eslint-plugin": "^17.5.1",
        "@angular-eslint/eslint-plugin-template": "^17.5.1",
        "@angular-eslint/schematics": "^17.5.1",
        "@angular-eslint/template-parser": "^17.5.1",
        "@angular/cli": "~18.0.1",
        "@angular/compiler-cli": "^18.0.0",
        "@fortawesome/fontawesome-free": "^6.5.2",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/jasmine": "~5.1.4",
        "@types/luxon": "^3.4.2",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.10.0",
        "@typescript-eslint/parser": "^7.10.0",
        "eslint": "^8.57.0",
        "jasmine-core": "~5.1.2",
        "karma": "~6.4.3",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.1",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "ng-packagr": "^18.0.0",
        "prettier": "^3.2.5",
        "typescript": "^5.4.5"
    }
}
